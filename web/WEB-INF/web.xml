<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <security-constraint>
        <display-name>Security Constraint</display-name>
        <web-resource-collection>
            <web-resource-name>Chief Manager Management System</web-resource-name>
            <url-pattern>/manageManager.jsp</url-pattern>
            <url-pattern>/ManageManagerServlet</url-pattern>
            <url-pattern>/addManager.jsp</url-pattern>
            <url-pattern>/noSuchUser.jap</url-pattern>
            <url-pattern>/showManager.jsp</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>chiefManager</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>Form-based Authentication Area</realm-name>
        <form-login-config>
            <form-login-page>/login.do</form-login-page>
            <form-error-page>/error.do</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <role-name>chiefManager</role-name>
    </security-role>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginAsChiefManager</servlet-name>
        <jsp-file>/loginManagerSystem.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>ErrorAsChiefManager</servlet-name>
        <jsp-file>/errorManagerSystem.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>CreateHotelServlet</servlet-name>
        <servlet-class>servlets.CreateHotelServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateAccount</servlet-name>
        <servlet-class>servlets.CreateAccount</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckOutRoom</servlet-name>
        <servlet-class>servlets.CheckOutRoom</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Payment</servlet-name>
        <servlet-class>servlets.Payment</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageHotelServlet</servlet-name>
        <servlet-class>servlets.ManageHotelServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageManagerServlet</servlet-name>
        <servlet-class>servlets.ManageManagerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CommentServlet</servlet-name>
        <servlet-class>servlets.CommentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ResetPasswordServlet</servlet-name>
        <servlet-class>servlets.ResetPasswordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderPDFServlet</servlet-name>
        <servlet-class>servlets.OrderPDFServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FacebookLogin</servlet-name>
        <servlet-class>servlets.FacebookLogin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateAccount</servlet-name>
        <url-pattern>/CreateAccount</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateHotelServlet</servlet-name>
        <url-pattern>/CreateHotelServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginAsChiefManager</servlet-name>
        <url-pattern>/login.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ErrorAsChiefManager</servlet-name>
        <url-pattern>/error.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckOutRoom</servlet-name>
        <url-pattern>/CheckOutRoom</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Payment</servlet-name>
        <url-pattern>/Payment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageHotelServlet</servlet-name>
        <url-pattern>/ManageHotelServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageManagerServlet</servlet-name>
        <url-pattern>/ManageManagerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CommentServlet</servlet-name>
        <url-pattern>/CommentServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResetPasswordServlet</servlet-name>
        <url-pattern>/ResetPasswordServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrderPDFServlet</servlet-name>
        <url-pattern>/OrderPDFServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FacebookLogin</servlet-name>
        <url-pattern>/FacebookLogin</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
